# Secrets Configuration Example
# Place sensitive information here instead of in airsend.yaml
# Reference these values using !secret in your configuration files

# Airsend device connection URLs
# Format: sp://PASSWORD@IP_ADDRESS or sp://PASSWORD@IP_ADDRESS:PORT
spurl: "sp://your_password@192.168.1.100"
spurl_2: "sp://second_password@192.168.1.101"

# Alternative: separate password fields (if not using spurl)
airsend_password: "your_password_here"
airsend_password_2: "second_device_password"

# Optional: Home Assistant API token for external deployment
# Only needed if running the addon outside of Home Assistant
# ha_api_token: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
# ha_api_url: "http://homeassistant.local:8123/api"